<?xml version="1.0" encoding="utf-8" ?> 
<component name = "TestScreen" extends = "Poster" >

	<script type="text/brightscript" uri="pkg:/components/testScreen.brs" />
	<interface>
		<function name="ShowOverlay" />
		<function name="HideOverlay" />
	</interface>
	<children>

 		<Timer id="highResTick" repeat="true" duration=".10" />
		<Poster id="mainPoster" opacity="0" width="960.0" height="540.0" >
			<Poster id="logoPoster" opacity="1" translation="[0,0]" width="480.0" height="245" />
			<Label
				id="titleLabel"
				height="44"
				width="480"
				text = ""
				horizAlign = "center"
				vertAlign = "center"
				translation="[360,20]" 
			/>
			<Label
				id="numberSetLabel"
				height="244"
				width="100"
				text = ""
				horizAlign = "left"
				vertAlign = "center"
				translation="[50,70]" 				
				wrap="true"

			/>
		</Poster>


		<Animation id="overlayFadeIn"
			duration="1"
			repeat="false"
			easeFunction="linear" >
			<FloatFieldInterpolator
				id="testFloat"
				key="[0.0, 1.0]"
				keyValue="[0.0, 1.0]"
				fieldToInterp="mainPoster.opacity"   />
				
			<Vector2DFieldInterpolator
				id="titleLableVectorIn"
				key="[0.0, 1.0]"
				keyValue="[[360,-20],[360,20]]"
				fieldToInterp="titleLabel.translation"   />
			<Vector2DFieldInterpolator
				id="numberSetLabelVectorIn"
				key="[0.0, 1.0]"
				keyValue="[[-50,70],[50,70]"
				fieldToInterp="numberSetLabel.translation"   />
		</Animation>

		<Animation id="overlayFadeOut"
			duration="1"
			repeat="false"
			easeFunction="linear" >
			<FloatFieldInterpolator
				id="testFloat"
				key="[0.0, 1.0]"
				keyValue="[1.0, 0.0]"
				fieldToInterp="mainPoster.opacity"   />
				
			<Vector2DFieldInterpolator
				id="titleLableVectorIn"
				key="[0.0, 1.0]"
				keyValue="[[360,20],[360,60]]"
				fieldToInterp="titleLabel.translation"   />
		</Animation>
		

	</children>
</component>
